{
  "rules": {
    ".read": "true",
    "ids": {
      ".write": "newData.exists() && auth != null"
    },
    "PERRINNTeamBalance": {
      ".indexOn": ["balanceNegative"]
    },
    "PERRINNTeams": {
      ".indexOn": ["name"]
    },
    "PERRINNTeamTransactions": {
      "$teamid": {
        ".indexOn": ["timestampNegative"]
      }
    },
    "PERRINNTransactions": {
      ".indexOn": ["sender","receiver"]
    },
    "PERRINNUsers": {
      ".indexOn": ["firstName"]
    },
    "projectTeams": {
      "$projectid": {
        ".indexOn": ["member"],
        "$teamid": {
          ".write": "(!data.exists() || newData.exists() && root.child('teamUsers').child(root.child('projects').child($projectid).child('leader').val()).child(auth.uid).child('member').val() === true && data.child('leader').val() != true) && auth != null"
        }
      }
    },
    "projects": {
      ".indexOn": ["name"],
      "$projectid": {
        ".write": "(!data.exists() || newData.exists() && root.child('teamUsers').child(root.child('projects').child($projectid).child('leader').val()).child(auth.uid).child('member').val() === true) && auth != null"
      }
    },
    "teamActivities": {
      "$teamid": {
        ".write": "newData.exists() && (root.child('PERRINNTeams').child($teamid).child('leaders').child(auth.uid).val() === true || root.child('PERRINNTeams').child($teamid).child('members').child(auth.uid).val() === true)"
      }
    },
    "teamMessages": {
      "$teamid": {
        "$messageid": {
          ".write": "!data.exists() && (root.child('PERRINNTeams').child($teamid).child('leaders').child(auth.uid).val() === true || root.child('PERRINNTeams').child($teamid).child('members').child(auth.uid).val() === true) && root.child('PERRINNTeamBalance').child($teamid).child('balance').val() > 0"
        }
      }
    },
    "teamPayments": {
      "$teamid": {
        "$chargeid": {
          ".write": "!data.exists() && newData.exists() && root.child('PERRINNTeams').child($teamid).child('leaders').child(auth.uid).val() === true"
        }
      }
    },
    "teamProjects": {
      ".indexOn": ["following"],
      "$teamid": {
        ".indexOn": ["following"],
        "$projectid": {
          ".write": "newData.exists() && root.child('PERRINNTeams').child($teamid).child('leaders').child(auth.uid).val() === true"
        }
      }
    },
    "teamUsers": {
      ".indexOn": ["leader","member","following"],
      "$teamid": {
        ".indexOn": ["leader","member","following"],
        "$uid": {
          ".write": "(!data.exists() || newData.exists() && root.child('teamUsers').child($teamid).child(auth.uid).child('leader').val() === true && data.child('leader').val() != true) && auth != null"
        }
      }
    },
    "teams": {
      "$teamid": {
        "$entry": {
          ".write": "!data.exists() && root.child('PERRINNTeams').child($teamid).child('leaders').child(auth.uid).val() === true || !root.child('PERRINNTeams').child($teamid).exists() && auth != null"
        }
      }
    },
    "userTeams": {
      "$uid": {
        ".write": "newData.exists() && auth.uid === $uid",
        ".indexOn": ["following"]
      }
    },
    "users": {
      "$uid": {
        "$entry": {
            ".write": "!data.exists() && auth.uid === $uid"
        }
      }
    }
  }
}
