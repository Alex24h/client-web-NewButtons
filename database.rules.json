{
  "rules": {
    "ids": {
      ".read": "auth.token.email_verified === true",
      ".write": "newData.exists() && auth.token.email_verified === true"
    },
    "teamActivities": {
      ".read": "auth.token.email_verified === true",
      "$teamid": {
        ".write": "newData.exists() && root.child('teamUsers').child($teamid).child(auth.uid).exists() && auth.token.email_verified === true"
      }
    },
    "teamMessages": {
      ".read": "auth.token.email_verified === true",
      "$teamid": {
        ".write": "newData.exists() && root.child('teamUsers').child($teamid).child(auth.uid).exists() && auth.token.email_verified === true"
      }
    },
    "teamTransactions": {
      ".read": "auth.token.email_verified === true",
      "$teamid": {
        ".write": "newData.exists() && root.child('teamUsers').child($teamid).child(auth.uid).child('leader').val() === true && auth.token.email_verified === true"
      }
    },
    "teamUsers": {
      ".read": "auth.token.email_verified === true",
      "$teamid": {
        "$uid": {
          ".write": "(!data.exists() || newData.exists() && root.child('teamUsers').child($teamid).child(auth.uid).child('leader').val() === true) && auth.token.email_verified === true"
        }
      }
    },
    "teams": {
      ".read": "auth.token.email_verified === true",
      "$teamid": {
        ".write": "(!data.exists() || newData.exists() && root.child('teamUsers').child($teamid).child(auth.uid).child('leader').val() === true) && auth.token.email_verified === true"
      }
    },
    "userTeams": {
      ".read": "auth.token.email_verified === true",
      "$uid": {
        ".write": "newData.exists() && auth.uid == $uid && auth.token.email_verified === true"
      }
    },
    "users": {
      ".read": "auth.token.email_verified === true",
      "$uid": {
        ".write": "newData.exists() && auth.uid == $uid"
      }
    }
  }
}
