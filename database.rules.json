{
  "rules": {
    ".read": "true",
    "appSettings": {
      ".write": "auth.uid === 'QYm5NATKa6MGD87UpNZCTl6IolX2'"
    },
    "ids": {
      ".write": "newData.exists() && auth != null"
    },
    "PERRINNTeamBalance": {
      ".indexOn": ["balanceNegative"]
    },
    "PERRINNTeams": {
      ".indexOn": ["name"]
    },
    "PERRINNTeamTransactions": {
      "$teamid": {
        ".indexOn": ["timestampNegative"]
      }
    },
    "PERRINNTransactions": {
      ".indexOn": ["sender","receiver"]
    },
    "PERRINNUsers": {
      ".indexOn": ["firstName"]
    },
    "projectTeams": {
      "$projectid": {
        ".indexOn": ["member"],
        "$teamid": {
          ".write": "(!data.exists() || newData.exists() && root.child('PERRINNTeams').child(root.child('projects').child($projectid).child('leader').val()).child('leaders').child(auth.uid).val() === true && data.child('leader').val() != true) && auth != null"
        }
      }
    },
    "projects": {
      ".indexOn": ["name"],
      "$projectid": {
        ".write": "(!data.exists() || newData.exists() && root.child('PERRINNTeams').child(root.child('projects').child($projectid).child('leader').val()).child('leaders').child(auth.uid).val() === true) && auth != null"
      }
    },
    "teamActivities": {
      "$teamid": {
        ".write": "newData.exists() && (root.child('PERRINNTeams').child($teamid).child('leaders').child(auth.uid).val() === true || root.child('PERRINNTeams').child($teamid).child('members').child(auth.uid).val() === true)"
      }
    },
    "teamMessages": {
      "$teamid": {
        ".indexOn": ["timestamp"],
        "$messageid": {
          ".write": "!data.exists() && (root.child('PERRINNTeams').child($teamid).child('leaders').child(auth.uid).val() === true || root.child('PERRINNTeams').child($teamid).child('members').child(auth.uid).val() === true)",
          "user": {
            ".validate": "newData.val()==auth.uid"
          }
        }
      }
    },
    "teamPayments": {
      "$teamid": {
        "$chargeid": {
          ".write": "!data.exists() && newData.exists() && root.child('PERRINNTeams').child($teamid).child('leaders').child(auth.uid).val() === true"
        }
      }
    },
    "teamProjects": {
      "$teamid": {
        "$projectid": {
          ".write": "newData.exists() && root.child('PERRINNTeams').child($teamid).child('leaders').child(auth.uid).val() === true"
        }
      }
    },
    "teams": {
      "$teamid": {
        "$entry": {
          ".write": "!data.exists() && root.child('PERRINNTeams').child($teamid).child('leaders').child(auth.uid).val() === true || !root.child('PERRINNTeams').child($teamid).exists() && auth != null",
          "user": {
            ".validate": "newData.val()==auth.uid"
          }
        }
      }
    },
    "teamServices": {
      "$teamid": {
        ".write": "root.child('PERRINNTeams').child($teamid).child('leaders').child(auth.uid).val() === true",
        "currentProcess": {
          "user": {
            ".validate": "newData.val()==auth.uid"
          }
        }
      }
    },
    "userTeams": {
      "$uid": {
        ".write": "newData.exists() && auth.uid === $uid"
      }
    },
    "users": {
      "$uid": {
        "$entry": {
            ".write": "!data.exists() && auth.uid === $uid"
        }
      }
    }
  }
}
