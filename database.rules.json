{
  "rules": {
    ".read": "true",
    "ids": {
      ".write": "newData.exists() && auth != null"
    },
    "PERRINNTeamBalance": {
      ".indexOn": ["balanceNegative"]
    },
    "PERRINNTransactions": {
      ".indexOn": ["sender","receiver"]
    },
    "PERRINNUsers": {
      ".indexOn": ["firstName"]
    },
    "projectTeams": {
      "$projectid": {
        ".indexOn": ["member"],
        "$teamid": {
          ".write": "(!data.exists() || newData.exists() && root.child('teamUsers').child(root.child('projects').child($projectid).child('leader').val()).child(auth.uid).child('member').val() === true && data.child('leader').val() != true) && auth != null"
        }
      }
    },
    "projects": {
      ".indexOn": ["name"],
      "$projectid": {
        ".write": "(!data.exists() || newData.exists() && root.child('teamUsers').child(root.child('projects').child($projectid).child('leader').val()).child(auth.uid).child('member').val() === true) && auth != null"
      }
    },
    "teamActivities": {
      "$teamid": {
        ".write": "newData.exists() && root.child('teamUsers').child($teamid).child(auth.uid).child('member').val() === true && auth != null"
      }
    },
    "teamMessages": {
      "$teamid": {
        ".write": "newData.exists() && root.child('teamUsers').child($teamid).child(auth.uid).child('member').val() === true"
      }
    },
    "teamPayments": {
      "$teamid": {
        "$chargeid": {
          ".write": "!data.exists() && newData.exists() && root.child('teamUsers').child($teamid).child(auth.uid).child('leader').val() === true"
        }
      }
    },
    "teamProjects": {
      ".indexOn": ["following"],
      "$teamid": {
        ".indexOn": ["following"],
        "$projectid": {
          ".write": "newData.exists() && root.child('teamUsers').child($teamid).child(auth.uid).child('leader').val() === true"
        }
      }
    },
    "teamTransactionRequests": {
      ".indexOn": ["status"],
      "$teamid": {
        ".write": "newData.exists() && root.child('teamUsers').child($teamid).child(auth.uid).child('member').val() === true",
        ".indexOn": ["status"]
      }
    },
    "teamTransactions": {
      ".indexOn": ["status"],
      "$teamid": {
        ".indexOn": ["status"],
        ".write": "newData.exists() && root.child('teamUsers').child($teamid).child(auth.uid).child('leader').val() === true",
        "$transactionid": {
          "amount": {
            ".validate": "newData.isNumber() && newData.val() > 0"
          }
        }
      }
    },
    "teamUsers": {
      ".indexOn": ["leader","member","following"],
      "$teamid": {
        ".indexOn": ["leader","member","following"],
        "$uid": {
          ".write": "(!data.exists() || newData.exists() && root.child('teamUsers').child($teamid).child(auth.uid).child('leader').val() === true && data.child('leader').val() != true) && auth != null"
        }
      }
    },
    "teams": {
      ".indexOn": ["name"],
      "$teamid": {
        ".write": "(!data.exists() || newData.exists() && root.child('teamUsers').child($teamid).child(auth.uid).child('leader').val() === true) && auth != null"
      }
    },
    "userTeams": {
      "$uid": {
        ".write": "newData.exists() && auth.uid === $uid",
        ".indexOn": ["following"]
      }
    },
    "users": {
      "$uid": {
        "$entry": {
            ".write": "!data.exists() && auth.uid === $uid"
        }
      }
    }
  }
}
