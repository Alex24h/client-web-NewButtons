{
  "rules": {
    ".read": "true",
    "appSettings": {
      ".write": "auth.uid === 'QYm5NATKa6MGD87UpNZCTl6IolX2'"
    },
    "ids": {
      ".write": "newData.exists() && auth != null"
    },
    "PERRINNTeams": {
      ".indexOn": ["name"]
    },
    "subscribeTeamUsers": {
      "$teamid": {
        "$uid": {
          ".write": "auth.uid === $uid"
        }
      }
    },
    "teamActivities": {
      "$teamid": {
        ".write": "newData.exists()"
      }
    },
    "teamMessages": {
      "$teamid": {
        ".indexOn": ["timestamp"],
        "$messageid": {
          "payload":{
            ".write": "!data.exists()",
            "user": {
              ".validate": "newData.val()==auth.uid"
            }
          },
          "process":{
            ".write":"!data.exists() && $teamid==auth.uid",
            "user":{
              ".validate": "newData.val()==auth.uid"
            }
          }
        }
      }
    },
    "teamPayments": {
      "$teamid": {
        "$chargeid": {
          ".write": "!data.exists() && newData.exists() && $teamid==auth.uid"
        }
      }
    },
    "teamReads": {
      "$teamid": {
        ".write": "newData.exists()"
      }
    },
    "teams": {
      "$teamid": {
        "$entry": {
          ".write": "!data.exists() && $teamid==auth.uid",
          "user": {
            ".validate": "newData.val()==auth.uid"
          }
        }
      }
    },
    "users": {
      "$uid": {
        "$entry": {
            ".write": "!data.exists() && auth.uid === $uid"
        }
      }
    }
  }
}
